# StayFit Health Companion - Environment Variables
# Copy this file to .env and replace with your actual values
# NEVER commit .env files to version control

# ================================
# AWS Configuration
# ================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ================================
# Cognito Authentication
# ================================
COGNITO_USER_POOL_ID=your_user_pool_id_here
COGNITO_CLIENT_ID=your_client_id_here
COGNITO_IDENTITY_POOL_ID=your_identity_pool_id_here

# ================================
# Database Configuration
# ================================
MONGODB_URL=<REDACTED_CREDENTIAL> = "your_username"@your-mongodb-host:27017/stayfit
REDIS_URL=<REDACTED_CREDENTIAL>
POSTGRES_URL=<REDACTED_CREDENTIAL> = "your_username"@your-postgres-host:5432/stayfit

# ================================
# API Keys
# ================================
OPENAI_api_key = "your_api_key_here"STRIPE_PUBLIC_KEY=your_stripe_public_key_here
STRIPE_<REDACTED_CREDENTIAL># ================================
# CloudFront & CDN
# ================================
CLOUDFRONT_DISTRIBUTION_ID=your_distribution_id_here
CLOUDFRONT_DOMAIN=your-domain.cloudfront.net

# ================================
# OpenSearch
# ================================
OPENSEARCH_ENDPOINT=search-your-domain.us-region-1.es.amazonaws.com

# ================================
# Application Configuration
# ================================
NODE_ENV=development
PORT=3000
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# ================================
# Webhooks (Optional)
# ================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/YOUR_SLACK_WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_DISCORD_WEBHOOK

# ================================
# Demo/Testing (Development Only)
# ================================
DEMO_password = "your_secure_password"LOCAL_password = "your_secure_password"TEST_password = "your_secure_password"